{
  "name": "vscode-extension-bpmn-editor",
  "publisher": "redhat",
  "displayName": "BPMN Editor",
  "description": "Edit BPMN files",
  "version": "0.10.0",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kie-tooling-store.git"
  },
  "scripts": {
    "build-ext": "rm -rf dist && webpack --mode production --devtool none",
    "pack-ext": "vsce package --githubBranch main --yarn -o ./dist/vscode_extension_bpmn_editor_$npm_package_version.vsix",
    "pack": "yarn build-ext && yarn pack-ext",
    "compile": "yarn build-ext",
    "watch": "yarn build-ext"
  },
  "dependencies": {
    "@kogito-tooling/bpmn-editor-unpacked": "^8.1.0",
    "@kogito-tooling/editor": "0.10.0",
    "@kogito-tooling/external-assets-base": "0.10.0",
    "@kogito-tooling/kie-bc-editors": "0.10.0",
    "@kogito-tooling/patternfly-base": "0.10.0",
    "@kogito-tooling/vscode-extension": "0.10.0"
  },
  "icon": "icon.png",
  "main": "./dist/extension/extension.js",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:kieKogitoWebviewEditorsBpmn"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false
    }
  },
  "contributes": {
    "customEditors": [
      {
        "viewType": "kieKogitoWebviewEditorsBpmn",
        "displayName": "BPMN Editor",
        "selector": [
          {
            "filenamePattern": "*.{bpmn,bpmn2,bmpn20.xml}"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "extension.kogito.getPreviewSvgBpmn",
        "title": "Get BPMN Editor Preview SVG",
        "icon": {
          "light": "./static/svg-icon-light.png",
          "dark": "./static/svg-icon-dark.png"
        }
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "when": "resourceLangId =~ /bpmn|bpmn2|bmpn20.xml/",
          "command": "extension.kogito.getPreviewSvgBpmn"
        }
      ],
      "editor/title": [
        {
          "when": "resourceLangId =~ /bpmn|bpmn2|bmpn20.xml/",
          "command": "extension.kogito.getPreviewSvgBpmn",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "bpmn",
        "extensions": [
          ".bpmn",
          ".bpmn2",
          ".bmpn20.xml"
        ],
        "aliases": [
          "bpmn",
          "bpmn2",
          "Business Process Model and Notation",
          "bmpn20.xml"
        ]
      }
    ]
  }
}
